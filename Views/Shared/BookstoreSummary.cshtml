@{
}
@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
        </h4>
    </div>

    <!--Animated blook ovals bounce in-->
    <div class="badge badge-pill badge-primary animate__animated animate__bounceIn">

        <ul>
            <li>Author: @Model.Author</li>
            <li>Category: @Model.Category</li>
            <li>Classification: @Model.Classification</li>
            <li>PageCount: @Model.PageCount</li>
            <li>Publisher: @Model.Publisher</li>
            <li>Isbn: @Model.Isbn</li>
            <li>Price: @Model.Price</li>
        </ul>

    </div>

    <!-- form to push the quantity and bookId that you want to buy to the BookShelf Page-->
    <form method="post" asp-page="/BookShelf">

        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <div class="input-group">
            <input type="number" class="form-control" name="quantity" value="1" min="1">
            <button type="submit" class="btn btn-success" data-toggle="tooltip" title="Click me!">Purchase</button>
        </div>

    </form>


    @*<div class="card-text p-1">@b.Description</div>*@
</div>

